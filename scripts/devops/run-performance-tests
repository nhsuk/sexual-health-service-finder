#!/bin/bash

./scripts/devops/install-jmeter

pushd ./test/performance/ || exit 1
JMETER_BIN_DIR=../../jmeter/bin/
TEST_NAME=chlamydia-finder

# Use user.properties
cp ./user.properties ${JMETER_BIN_DIR}user.properties

# Run test and generate dashboard
${JMETER_BIN_DIR}jmeter -n -t ./$TEST_NAME.jmx -Jhostname="nhswebsite-staging.nhs.uk" -Jusers=10 -Jrampup=60 -Jduration=30 -Jthroughput=30 -Jpostcodes=outcodes.csv -l $TEST_NAME.jtl -e -o ./dashboards -f

popd || exit 1
